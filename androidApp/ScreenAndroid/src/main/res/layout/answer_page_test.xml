<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff99cc00">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff99cc00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/aTitle"
            android:id="@+id/textViewAnswerTitle"
            android:layout_gravity="left"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:focusableInTouchMode="false"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerFieldAlt1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffffff"
            android:height="40dp"
            android:textColor="#ff000000"
            android:layout_marginBottom="40dp"
            android:clickable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerFieldAlt2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffffff"
            android:height="40dp"
            android:textColor="#ff000000"
            android:layout_marginBottom="40dp"
            android:clickable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerFieldAlt3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffffff"
            android:height="40dp"
            android:textColor="#ff000000"
            android:layout_marginBottom="40dp"
            android:clickable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerFieldAlt4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffffff"
            android:height="40dp"
            android:textColor="#ff000000"
            android:layout_marginBottom="40dp"
            android:clickable="true" />



    </LinearLayout>

</ScrollView>